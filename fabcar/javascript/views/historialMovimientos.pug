doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Historial de movimientos
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(href='/css/historial.css' rel='stylesheet', type='text/css')
body.bg-light
.container.py-3.mt-5
  nav.navbar.navbar-light.bg-light
    .container-fluid
      a.navbar-brand(href='/menu') Inicio
      a.navbar-brand(href='/cerrarSesion') Cerrar sesi&oacute;n
  header
    h1 Historial de movimientos
  main
    .table-responsive.mt-5
      table.table.text-center
        thead
          tr
            th(style='width: 20%;') Articulo 
            th(style='width: 20%;') Cantidad
            th(style='width: 20%;') Organizaci&oacute;n
            th(style='width: 20%;') Sucursal
            th(style='width: 30%;') Fecha
            th(style='width: 30%;') Hora
        tbody
          each movimiento in movimientos
            tr
              td.text-start #{movimiento['Record']['articulo']}
              td=movimiento['Record']['cantidad']
              td=movimiento['Record']['organizacion']
              td=movimiento['Record']['sucursal']
              td=movimiento['Record']['fecha']
              td=movimiento['Record']['hora']