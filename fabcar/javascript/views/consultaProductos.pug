doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Consulta de productos
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
  link(href='/css/menu.css' rel='stylesheet')
  style.
    .bd-placeholder-img {
    font-size: 1.125rem;
    text-anchor: middle;
    -webkit-user-select: none;
    -moz-user-select: none;
    user-select: none;
    }
    @media (min-width: 768px) {
    .bd-placeholder-img-lg {
    font-size: 3.5rem;
    }
    }
.container.py-3.mt-5
  header
    h1 Consulta de productos
  main
    .table-responsive.mt-5
      table.table.text-center
        thead
          tr
            th(style='width: 34%;') Producto
            th(style='width: 22%;') Disponibles
            th(style='width: 22%;') Vendidos
            th(style='width: 22%;') Sucursal
        tbody
            each product in productos
                tr
                    th.text-start(scope='row') #{product["producto"]}
                    td=product["disponibilidad"]
                    td=product["vendidos"]
                    td=product["sucursal"]
